# Database Configuration
DATABASE_URL="postgres://postgres:postgres@localhost:5432/postgres?sslmode=disable"
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m

# Server Configuration
SERVER_HOST="0.0.0.0"
SERVER_PORT=8080
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=1m

# Authentication
DEVICE_API_KEY="your-secret-device-key-here-change-me"
TOKEN_TTL=168h  # 7 days
RATE_LIMIT_PER_MINUTE=10.0
RATE_LIMIT_BURST=5

# File Uploads
UPLOAD_PATH="./uploads"
MAX_MESSAGE_SIZE=524288  # 512 KB

# CORS
CORS_ALLOWED_ORIGINS="http://localhost:8080,http://pi.linadu.live"
CORS_MAX_AGE=300

# Google Calendar
GOOGLE_CREDENTIALS_PATH="./credentials/fisheye-calendar-credentials.json"
GOOGLE_CALENDAR_ID="your-calendar-id@group.calendar.google.com"
CALENDAR_SYNC_INTERVAL=1m

# Logging
DEBUG="true"
LOG_FILE="app.log"