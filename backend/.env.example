# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# PostgreSQL Database
DATABASE_URL=postgresql://user:password@localhost:5432/fisheye

# JWT Authentication (generate with: openssl rand -base64 64)
JWT_SECRET=your-secret-key-change-in-production
JWT_TTL=168h

# MQTT Configuration
MQTT_BROKER=mqtts://localhost:8883
MQTT_CLIENT_ID=fisheye-backend
MQTT_USERNAME=admin
MQTT_PASSWORD=password

# Google Calendar (Optional)
GOOGLE_SA_JSON=./credentials/service-account.json

# Logging
LOG_LEVEL=info

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Timeouts (in seconds)
VISIT_TIMEOUT=30

# Scheduler (in minutes)
CALENDAR_SYNC_INTERVAL=30
DEVICE_OFFLINE_THRESHOLD=15